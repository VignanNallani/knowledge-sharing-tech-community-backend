datasource db {
  provider = "sqlite" // or "postgresql" if you're using Postgres
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  skills    String?
  createdAt DateTime @default(now())

  posts     Post[]
  comments  Comment[]
  likes     Like[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  comments  Comment[]
  likes     Like[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model Like {
  id      Int   @id @default(autoincrement())
  userId  Int
  postId  Int
  user    User  @relation(fields: [userId], references: [id])
  post    Post  @relation(fields: [postId], references: [id])
}
