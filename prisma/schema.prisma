generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  users     User[]
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  email               String               @unique
  password            String
  bio                 String?
  skills              String?
  profileImage        String?
  roleId              Int?
  isActive            Boolean              @default(true)
  deletedAt           DateTime?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  bookings            Booking[]            @relation("UserBookings")
  comments            Comment[]
  conversationMembers ConversationMember[]
  events              EventAttendee[]      @relation("UserEventAttendances")
  followers           Follower[]           @relation("UserFollowers")
  following           Follower[]           @relation("UserFollowing")
  likes               Like[]
  mentorshipsAsMentee Mentorship[]         @relation("MenteeRelation")
  mentorshipsAsMentor Mentorship[]         @relation("MentorRelation")
  messagesSent        Message[]            @relation("UserMessages")
  posts               Post[]
  reports             Report[]
  slots               Slot[]               @relation("UserSlots")
  role                Role?                @relation(fields: [roleId], references: [id])
  collaborations      Collaboration[]      @relation("UserCollaborations")

  @@index([email])
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  image     String?
  authorId  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
  likes     Like[]
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags      PostTag[]
  reports   Report[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  Int
  postId    Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Like {
  id     Int  @id @default(autoincrement())
  userId Int
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Tag {
  id    Int       @id @default(autoincrement())
  name  String    @unique
  posts PostTag[]
}

model PostTag {
  postId Int
  tagId  Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model Follower {
  id          Int  @id @default(autoincrement())
  followerId  Int
  followingId Int
  follower    User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)
}

model Event {
  id        Int             @id @default(autoincrement())
  name      String
  startsAt  DateTime?
  endsAt    DateTime?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  attendees EventAttendee[] @relation("EventAttendees")
}

model EventAttendee {
  eventId Int
  userId  Int
  event   Event @relation("EventAttendees", fields: [eventId], references: [id], onDelete: Cascade)
  user    User  @relation("UserEventAttendances", fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
}

model Mentorship {
  id            Int       @id @default(autoincrement())
  mentorId      Int
  menteeId      Int
  status        String    @default("pending")
  topic         String?
  preferredSlot DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  mentee        User      @relation("MenteeRelation", fields: [menteeId], references: [id], onDelete: Cascade)
  mentor        User      @relation("MentorRelation", fields: [mentorId], references: [id], onDelete: Cascade)

  @@index([mentorId])
  @@index([menteeId])
}

model Collaboration {
  id        Int      @id @default(autoincrement())
  project   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]   @relation("UserCollaborations")
}

model Report {
  id        Int      @id @default(autoincrement())
  reason    String
  postId    Int?
  userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String               @id @default(uuid())
  createdAt DateTime             @default(now())
  members   ConversationMember[]
  messages  Message[]
}

model ConversationMember {
  conversationId String
  userId         Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([conversationId, userId])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  senderId       Int?
  body           String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User?        @relation("UserMessages", fields: [senderId], references: [id], onDelete: Cascade)
}

model Slot {
  id        String     @id @default(uuid())
  mentorId  Int
  startAt   DateTime
  endAt     DateTime
  status    SlotStatus @default(OPEN)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  booking   Booking?
  Meeting   Meeting?
  mentor    User       @relation("UserSlots", fields: [mentorId], references: [id], onDelete: Cascade)

  @@index([mentorId, startAt])
}

model Booking {
  id        String   @id @default(uuid())
  slotId    String   @unique
  menteeId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mentee    User     @relation("UserBookings", fields: [menteeId], references: [id], onDelete: Cascade)
  slot      Slot     @relation(fields: [slotId], references: [id], onDelete: Cascade)

  @@index([menteeId])
}

model Meeting {
  id        String        @id @default(uuid())
  slotId    String        @unique
  meetUrl   String?
  status    MeetingStatus @default(SCHEDULED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  slot      Slot          @relation(fields: [slotId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
}

enum SlotStatus {
  OPEN
  BOOKED
  CANCELLED
}

enum MeetingStatus {
  SCHEDULED
  STARTED
  ENDED
  CANCELLED
}
